
<div class="row">
  <div class="col m8 offset-m2">
    <div class="card white-grey darken-1" id="show-post" id="show-post">
      <div class="card-content black-text post-form" id="show-post-form">
        <div class="row post-div input-field showing">
		  <h1 id="post-title-heading"><%= @post.post_title %> - <%= link_to @post.city.city_name, '/cities/' + @post.city.url_display %></h1>
		  <h3 id="poster-heading">Posted by <%= @user.first_name %><br><h6 class="see-all">Click for all posts by <span class="see-all"><%= link_to @user.first_name, @user, {:style => 'color:red;', :class => "css_class"} %></span>   |   Click for all <span class="see-all"><%= link_to @post.city.city_name, '/cities/' + @post.city.url_display, {:style => 'color:red;', :class => "css_class"} %> posts</h6></span>
		  <%= @post.post_content %>

<% if current_user && (@post.user == current_user || current_user.admin) %>
	<%= button_to 'Delete Post', post_path(@post), method: :delete, data: {confirm: 'Are you sure you want to delete this post?' }%>

<% end %>

		 
	    </div>
      </div>
    </div>
  </div>
</div>

