<%= image_tag "https://static.pexels.com/photos/28184/pexels-photo-28184.jpg", id: "city-img" %>

<div class="container">
  <div class="row">
    <div class="col m6 offset-m3">
      <div class="card white-grey darken-1" id="post-card">
        <div class="content card-content black-text" id="show-post-form">
	      <h3><%= @post.post_title %></h3>
		  <p>Posted by: <%= @user.first_name %></p>
	      <p><%= @post.post_content %></p>
	      <br>
		  <a class="waves-effect waves-light btn"><%= button_to 'Delete Post', post_path(@post), method: :delete%></a>
	    </div>
	  </div>
	</div>
  </div>
</div>



<style>

 #city-img {
    width: 100%;
    height: 100vh;
    -webkit-filter:brightness(50%);
    -moz-filter:brightness(50%);
    filter:url(#brightness);
    filter:brightness(50%);
  }

  .container {
    z-index: 0;
    position: relative;
  }

  #show-post-form {
    z-index: 1;
    text-align: center;
    margin: -400px auto;
    padding-top: 6%;
    justify-content: center;
    width: 50%;
    height: 225px;
    color: black;
  }

  #post-card {
    background-color: rgba(255,255,255,0.5);
  }

  .content {
  	margin-top: -70px;
  	position: relative;
  }

  .btn {
    margin: 0 auto;
    background-color: black;
    color: grey;
  }

  .btn:hover {
    background-color: grey;
    color: black;
  }
 </style>