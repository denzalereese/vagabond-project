<%= image_tag "https://static.pexels.com/photos/28184/pexels-photo-28184.jpg", id: "city-img" %>

<p><%= @city_id %></p>

<div class="container">
  <div class="row">
    <div class="col m6 offset-m3">
      <div class="card white-grey darken-1" id="new-post">
        <div id="new-post-form" class="card-content black-text">
        <%= form_for @post do |f| %>
          <div class="row post-div input-field">
            <%= f.text_field :post_title, placeholder: "Title" %>
            <%= f.text_field :post_content, placeholder: "Content" %>
            <%= f.hidden_field :city_id, value: @city_id %>
            <%= f.hidden_field :user_id, value: session[:user_id] %>
            <a class="waves-effect waves-light btn"><%= f.submit "Create Post" %></a>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>

  #city-img {
    width: 100%;
    height: 100vh;
    -webkit-filter:brightness(50%);
    -moz-filter:brightness(50%);
    filter:url(#brightness);
    filter:brightness(50%);
  }

  .container {
    z-index: 0;
    position: relative;
  }

  #new-post-form {
    z-index: 1;
    text-align: center;
    margin: -400px auto;
    padding-top: 6%;
    justify-content: center;
    width: 50%;
    height: 220px;
  }

  #new-post {
    background-color: rgba(255,255,255,0.5);
  }

  .post-div {
    color: black;
  }

  .input-field label {
     color: red;
     text-align: center; 
   }

   /* label underline focus color */
   .input-field input[type=text]:focus {
     border-bottom: 1px solid red;
     box-shadow: 0 1px 0 0 red;
   }

  .btn {
    margin: 0 auto;
    background-color: black;
    color: grey;
  }

  .btn:hover {
    background-color: grey;
    color: black;
  }

</style>