<%= image_tag "https://static.pexels.com/photos/28184/pexels-photo-28184.jpg", id: "city-img" %>

<div id="user-show-container" class="container">
  <div id="profile-card" class="row top-margined card white-grey darken-1 z-depth-5 animated slideInDown">
      <div id="profile-info" class="col s6">
        <h3 id="profile-name"><%= @user.first_name %> <%= @user.last_name%></h2>
        <img id="profile-photo" class="circle responsive-img" src="http://placehold.it/250x250">
            <ul>
              <li><h4><%=@user.current_city%></h4></li>
              <% if current_user == @user || current_user && current_user.admin %>
                  <li><%= link_to "Edit Profile", edit_user_path %></li>
              <% end %>
            <ul>
        </div>

    <div id="posts-container" class="col s6">
      <ul>
        <% for post in @posts %>
        <li>
           <h5><%= link_to post.post_title, '/posts/show/' + post.id.to_s %></h5>
           <p class="post-content"><small><%= post.post_content[0...150] + '...' %></small></p>
        </li>
        <hr>
        <% end %>
      </ul>
    </div>
  </div>
</div>
