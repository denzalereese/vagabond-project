<%= image_tag "https://static.pexels.com/photos/28184/pexels-photo-28184.jpg", id: "city-img" %>

<% if current_user %>
<div class="row">
	<div class="col m8 offset-m2">
		<div class="card white-grey darken-1" id="new-post">
			<div class="card-content black-test post-form">
				<%= form_for @city do |f| %>
				<div class="row post-div input-field">
					<%= f.text_field :city_name, placeholder: "Title" %>
					<%= f.text_field :image_url, placeholder: "Image Url" %>
					<% if @current_user.admin %>
						<%= f.hidden_field :status, value: 'approved' %>
					<% end %>
					<a class="waves-effect waves-light btn create-brn"><%= f.submit "Create Post" %></a>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
<% else %>
	<div class="row">
		<div class="col m8 offset-m2 top-margined">
			<div class="card white-grey darken-1">
				<div class="card-content black-text"><h4>You must be logged in to suggest cities. Please log in or create an account to continue.</h4></div>
			</div>
		</div>
	</div>
<% end %>